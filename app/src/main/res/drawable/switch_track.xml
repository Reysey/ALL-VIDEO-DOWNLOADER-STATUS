<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:dither="true" android:shape="rectangle" android:useLevel="false" android:visible="true">
            <gradient android:angle="90" android:centerColor="#ff6676" android:endColor="#ff8c5d" android:startColor="#ff4f84" android:type="linear" />
            <corners android:radius="100dp" />
            <size android:width="0dp" android:height="0dp" />
        </shape>
    </item>
    <item android:bottom="5dp" android:left="5dp" android:right="5dp" android:state_checked="false" android:state_enabled="false" android:top="5dp">
        <shape android:dither="true" android:shape="rectangle" android:useLevel="false" android:visible="true">
            <gradient android:angle="90" android:centerColor="#dbdbdb" android:endColor="#dbdbdb" android:startColor="#dbdbdb" android:type="linear" />
            <corners android:radius="100dp" />
            <size android:width="3dp" android:height="20dp" />
        </shape>
    </item>
</selector>
